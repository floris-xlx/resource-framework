{
  "name": "resource-framework",
  "version": "0.1.0",
  "description": "Composable resource table/drilldown framework with adapter-based UI bindings.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XYLEX-Group/resource-framework.git"
  },
  "homepage": "https://xylex.group",
  "author": "XYLEX Group",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "workspaces": [
    "apps/*",
    "packages/*",
    "web"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js",
      "require": "./dist/components/index.cjs"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.js",
      "require": "./dist/adapters/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "rimraf dist && rollup -c && tsc -p tsconfig.build.json",
    "build:all": "turbo run build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "@tanstack/react-table": "^8.0.0",
    "date-fns": "^3.0.0",
    "lucide-react": "^0.453.0",
    "md5": "^2.3.0",
    "react": ">=18",
    "react-dom": ">=18",
    "react-error-boundary": "^4.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^22.19.1",
    "turbo": "^2.1.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.9"
  }
}
